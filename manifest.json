{
  "manifest_version": 3,
  "name": "Form Filler",
  "version": "1.0",
  "description": "Fills online forms with your saved data.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html"
  }
}
